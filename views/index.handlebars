<div class="container">
<div class="jumbotron jumbotron burger-title justify-content-center">
  <h1 class="display-4">BURGERS!</h1>
  <p class="lead">Let's Eat!</p>
</div>
<div class="container burger-container">
  <div class="row burger-row">
    <div class="col-sm-5 lists">
      <h2>Eat this Burger! Devour! Devour!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <p>Burger: {{this.burger_name}}</p><button data-id="{{this.id}}" data-devoured="{{this.devoured}}" class="devour">Devour
            Burger!</button>
          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-5 lists">
      <h2>This Burger has been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <p>Burger: {{this.burger_name}}</p>
          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="ca" name="name" placeholder="burger name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>